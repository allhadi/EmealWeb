@model Emeal.Model.ViewModels.AddressViewModel

@using (Html.BeginUmbracoForm<Emeal.Controllers.CheckOutController>(Model.AddressType==Enums.AddressType.DeliveryAddress? "AddDeliveryAddress":"AddBillingAddress"))
{
<div class="form-horizontal">
    <h4>Add Address</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Street Address" } })
            @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.ExtendedStreetAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = " Address" } })
            @Html.ValidationMessageFor(model => model.ExtendedStreetAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.Town, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
            @Html.ValidationMessageFor(model => model.Town, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.County, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
            @Html.ValidationMessageFor(model => model.County, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Post Code" } })
            @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12 ">
            <input type="submit" value="Add" class="btn btn-info" />
        </div>
    </div>
</div>
}

